/**index.wxss**/

page {
  /* background-color: #f6f6f6; */
  padding-bottom: 60rpx;
}

@media (prefers-color-scheme: light) {
    .options {
        margin-top: 30rpx;
        border-radius: 5px;
        background-color: white;
        width: 93%;
        padding-bottom: 1rpx;
      }
}

@media (prefers-color-scheme: dark) {
    .options {
      margin-top: 30rpx;
      border-radius: 5px;
      background-color: #141728;
      width: 93%;
      padding-bottom: 1rpx;
    }
}

.options_info {
  display: flex;
  padding: 30rpx 25rpx;
  align-items: center;
  justify-content: space-between;
}

.options_info_text {
  display: flex;
  flex-direction: column;
}

.options_info_text_title {
  margin-bottom: 10rpx;
  font-weight: 400;
  font-size: 40rpx;
}

.options_info_text_tip {
  color: rgba(0, 0, 0, 0.4);
  font-size: 25rpx;
}

.options_item {
  padding: 30rpx 25rpx;
  display: flex;
  justify-content: space-between;
}

.options_item_title {
  font-size: 30rpx;
}

.options_item_icon {
  width: 30rpx;
  height: 30rpx;
}

.line {
  width: 95%;
  margin: 0 auto;
  height: 2rpx;
  background-color: rgba(0, 0, 0, 0.1);
}

.environment {
  color: rgba(0, 0, 0, 0.4);
  font-size: 24rpx;
  margin-top: 25%;
}